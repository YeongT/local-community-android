<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="70dp">

    <RelativeLayout
        android:id="@+id/Home_RelativeLayout_newFeedTitleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Home_CircleImageView_newsFeedProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:elevation="12dp"
            android:src="@drawable/arin" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Home_CircleImageView_newsFeedProfileImage"
            android:background="@color/invisible">

            <TextView
                android:id="@+id/Home_TextView_newsFeedUserLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/ntsblack"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Home_TextView_newsFeedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_TextView_newsFeedUserLink"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/ntlight"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/Home_TextView_newFeedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Home_RelativeLayout_newFeedTitleSpace"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@color/invisible"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/Home_ImageView_newsFeedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Home_TextView_newFeedContent"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:src="@drawable/arin" />

</RelativeLayout>