<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="70dp">

    <RelativeLayout
        android:id="@+id/Home_RelativeLayout_newFeedTitleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Home_CircleImageView_newsFeedProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:elevation="12dp"
            android:src="@drawable/arin" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/invisible"
            android:layout_toEndOf="@+id/Home_CircleImageView_newsFeedProfileImage">

            <TextView
                android:id="@+id/Home_TextView_newsFeedUserLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:textSize="13dp"
                android:fontFamily="@font/ntsblack"
                android:includeFontPadding="false"
                android:text="TalYeongJongChangWuMo"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Home_TextView_newsFeedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_TextView_newsFeedUserLink"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:textSize="13dp"
                android:fontFamily="@font/ntlight"
                android:includeFontPadding="false"
                android:text="7/29 21:30"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/Home_TextView_newFeedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Home_RelativeLayout_newFeedTitleSpace"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:layout_marginEnd="25dp"
        android:background="@color/invisible"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:text="미안하다 이거 보여줄려고 어그로 끌었다 ㄹㅇ 한소희 미모 수준 실화냐? 진짜 세계관 최강자의 얼굴이다..." />

    <ImageView
        android:id="@+id/Home_ImageView_newsFeedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Home_TextView_newFeedContent"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:src="@drawable/arin" />

</RelativeLayout>