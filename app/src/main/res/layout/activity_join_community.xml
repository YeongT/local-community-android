<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/join_community_imagebutton_navigate_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:src="@drawable/ic_round_navigate_before_24px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_community_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ntsblack"
        android:includeFontPadding="false"
        android:text="커뮤니티 정보"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/join_community_imageview_community_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:elevation="13dp"
        android:src="@drawable/gagnammin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_title" />

    <TextView
        android:id="@+id/join_community_textview_text_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:text="커뮤니티 이름"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_imageview_community_image" />

    <TextView
        android:id="@+id/join_community_textview_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ntsblack"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_text_community_name"
        tools:text="EXAMPLE 커뮤니티" />

    <TextView
        android:id="@+id/join_community_textview_text_community_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:text="커뮤니티 위치"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_community_name" />

    <TextView
        android:id="@+id/join_community_textview_community_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ntsblack"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_text_community_location"
        tools:text="경기도 안산시 와동" />

    <TextView
        android:id="@+id/join_community_textview_text_community_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:text="커뮤니티 소개"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_community_location" />

    <TextView
        android:id="@+id/join_community_textview_community_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ntsblack"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_text_community_description"
        tools:text="%%위 커뮤니티는 예시를 위한%%\n$$AIDU팀의 커뮤니티입니다.$$\n**많은 관심 바랍니다.**" />

    <TextView
        android:id="@+id/join_community_textview_text_community_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ntregular"
        android:includeFontPadding="false"
        android:text="태그"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_community_description" />

    <LinearLayout
        android:id="@+id/join_community_linearlayout_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_community_textview_text_community_tag">

        <TextView
            android:id="@+id/join_community_textview_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_black"
            android:elevation="5dp"
            android:fontFamily="@font/ntsmedium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingHorizontal="25dp"
            android:paddingVertical="8dp"
            android:textColor="@color/white"
            tools:text="시흥" />

        <TextView
            android:id="@+id/create_community_textview_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_black"
            android:elevation="5dp"
            android:fontFamily="@font/ntsmedium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingHorizontal="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            tools:text="정왕동" />

        <TextView
            android:id="@+id/create_community_textview_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_black"
            android:elevation="5dp"
            android:fontFamily="@font/ntsmedium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingHorizontal="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/search_button_tag"
            android:textColor="@color/white"
            tools:text="배곧4로" />

        <TextView
            android:id="@+id/create_community_textview_tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_black"
            android:elevation="5dp"
            android:fontFamily="@font/ntsmedium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingHorizontal="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/search_button_tag"
            android:textColor="@color/white"
            tools:text="용인" />

    </LinearLayout>


    <Button
        android:id="@+id/join_community_button_join_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_black"
        android:backgroundTint="#FFBC1E"
        android:elevation="12dp"
        android:fontFamily="@font/ntsblack"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:text="커뮤니티 가입하기"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_community_linearlayout_tags" />

</>